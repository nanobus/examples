
build_dir:="build"

build TARGET="wasm32-unknown-unknown" PROFILE="release": codegen
  cargo build {{ if PROFILE == "release" {"--release"} else {""} }} --target={{TARGET}}
  mkdir -p {{build_dir}}
  cp ./target/{{TARGET}}/{{PROFILE}}/*.wasm {{build_dir}}/

debug:
  just build "wasm32-wasi" "debug"

codegen:
  apex generate
